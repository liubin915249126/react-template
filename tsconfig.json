{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators":true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2021",
            "es2020",
            "es2019",
            "esnext.array"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [ //包含的编译目录
        "./src/**/*"
    ],
    "exclude": [ //排出不编译的目录
        "node_modules",
        "**/*.spec.ts"
    ]
}